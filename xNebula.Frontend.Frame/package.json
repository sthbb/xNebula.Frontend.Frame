{
  "name": "xnebula.frontend.frame",
  "private": true,
  "packageManager": "pnpm@9.3.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "lint": "pnpm run prettier && pnpm run stylelint && pnpm run eslint",
    "prettier": "prettier ./**/*.{cjs,js,jsx,ts,tsx,vue,css,scss,md,json,html,yaml} --write",
    "stylelint": "pnpm -F @xnebula/frame run style",
    "eslint": "eslint ./**/*.{cjs,js,jsx,ts,tsx,vue} --fix",
    "lint-staged": "lint-staged",
    "verify-commit": "node scripts/verifyCommit.js",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky && husky install"
  },
  "lint-staged": {
    "*.{css,scss,vue}": [
      "pnpm run stylelint"
    ],
    "*.{cjs,js,jsx,ts,tsx,vue}": [
      "eslint --fix"
    ],
    "*.{cjs,js,jsx,ts,tsx,vue,css,scss,md,json,html,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "~7.17.0",
    "@typescript-eslint/parser": "~7.17.0",
    "chalk": "~5.3.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-prettier": "~5.2.1",
    "husky": "~9.0.11",
    "lint-staged": "~15.2.7",
    "prettier": "~3.3.3"
  }
}
